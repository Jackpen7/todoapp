<style>
.w3-button {width:150px;}
</style>
<% if @todo.errors.any? %>

<h2>The following errors prevented the task from being saved</h2>
<ul>
<% @todo.errors.full_messages.each do |msg| %>
<ul><li><%= msg %></li></ul>
<% end %>
</ul>

<% end %>


<%= form_for @todo do |f| %>

<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :description %><br>
<%= f.text_area :description %>
</p>

<p>
<%= f.submit :class => 'w3-button, w3-blue' %>
</p>

<% end %>