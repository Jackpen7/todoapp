<div class="w3-padding-small">
  <h1>Listing of Tasks</h1>
  <p>
    <%= link_to "Create a Task", new_todo_path %>
  </p>
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
   <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.description %></td>
        <td><%= link_to edit_todo_path(todo) do %>
        <i class="fa fa-pencil-square-o">
          <% end %></td>
        <td><%= link_to todo_path(todo) do%>
        <i class="fa fa-eye">
        <% end %></td>
      </tr>
    <% end %>
  </table>
  
  
</div>